
<h2 class="page-title">Grocery List</h2>
<div class="page-content">
  <ul class="grocery-list">
    <% @list_items.each do |ingredient| %>
      <li class="grocery-item well">
        <b class="name"><%= ingredient.name %>
        <%= link_to("Remove", user_grocerylist_path(current_user.id,  id: params[:id], ingredient_id: ingredient.id), method: 'delete') %>
      </li>
    <% end %>
  </ul>
</div><!-- .page-content -->
